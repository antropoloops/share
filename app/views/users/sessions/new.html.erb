<section class="login hero is-success is-fullheight">
  <div class="hero-body">
    <div class="container has-text-centered">
      <div class="column is-4 is-offset-4">
        <h3 class="title has-text-grey">Login</h3>
        <p class="subtitle has-text-grey">Please login to proceed.</p>
        <div class="box">
          <!-- figure class="avatar">
            <img src="https://placehold.it/128x128">
          </figure -->
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="field">
              <div class="control">
                <input class="input is-large" placeholder="Your email"
                autofocus="autofocus" autocomplete="email"
                type="email" value="" name="user[email]" id="user_email" />
              </div>
            </div>
            <div class="field">
              <div class="control">
                <input  class="input is-large" placeholder="Your password"
                autocomplete="current-password" type="password" name="user[password]" id="user_password" />
              </div>
            </div>
            <div class="field">
              <label class="checkbox">
                <input name="user[remember_me]" type="hidden" value="0" />
                <input type="checkbox" value="1" name="user[remember_me]" id="user_remember_me" />
                Remember me
              </label>
            </div>
            <button class="button is-block is-info is-large is-fullwidth">Login</button>
          <% end %>
        </div>
        <p class="has-text-grey">
          <a href="../">Forgot Password</a> &nbsp;Â·&nbsp;
          <a href="../">Need Help?</a>
        </p>
      </div>
    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="columns features">
      <% @spaces.each do |space| %>
        <div class="column is-4">
          <article class="card">
            <div class="card-image">
              <figure class="image">
                <%= image_tag space.logo_url(:small) if space.logo %>
              </figure>
            </div>
            <div class="card-content">
              <div class="content">
                <h2><%= link_to space.name, space %></h2>
                <p><%= space.description %></p>
              </div>
            </div>
          </article>
        </div>
      <% end %>
    </div>
  </div>
</section>

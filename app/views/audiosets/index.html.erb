<section class="section">
  <div class="container">
    <div class="columns features">
      <% @audiosets.each do |audioset| %>
        <div class="column is-4">
          <article class="card">
            <div class="card-image">
              <figure class="image">
                <%= image_tag audioset.logo_url(:small) if audioset.logo %>
              </figure>
            </div>
            <div class="card-content">
              <div class="content">
                <h2><%= link_to audioset.name, audioset %></h2>
                <p><%= audioset.description %></p>
              </div>
            </div>
          </article>
        </div>
      <% end %>
    </div>
  </div>
</section>
